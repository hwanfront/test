{
  "name": "@packages/shared-types",
  "version": "0.0.0",
  "private": true,
  "license": "MIT",
  "scripts": {
    "dev": "pnpm build --watch",
    "build": "tsc -b -v",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\""
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "./dist/**"
  ],
  "publishConfig": {
    "access": "public"
  },
  
  "typesVersions": {
    "*": {
      "*": [
        "./src/*" 
      ],
      "index": [
        "./src/index.ts"
      ]
    }
  },
  
  "exports": {
    ".": {
      "types": "./src/index.ts", 
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./*": {
      "types": "./src/*.ts", 
      "import": "./dist/*.js",
      "require": "./dist/*.js"
    }
  },
  "devDependencies": {
    "@packages/eslint-config": "workspace:*",
    "@packages/typescript-config": "workspace:*",
    "@types/node": "^24.5.2",
    "eslint": "^9.36.0",
    "ts-loader": "^9.5.4",
    "ts-node": "^10.9.2",
    "typescript": "5.9.2"
  },
  "dependencies": {
    "zod": "^4.1.11"
  }
}